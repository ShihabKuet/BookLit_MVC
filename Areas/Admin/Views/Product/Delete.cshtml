@model Product

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="col-12 text-center">
            <h2 class="text-black py-0">Remove Product</h2>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                <div asp-validation-summary="All"></div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" type="text" disabled class="form-control border-0 shadow"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ISBN" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Author" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Publisher" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Publisher" class="ms-2"></label>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price50" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price100" type="text" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2"></label>
                </div>

                <div class="row mt-4">
                    <div class="col-6 col-md-5">
                        <button type="submit" class="btn btn-danger form-control"> Remove </button>
                    </div>
                    <div class="col-6 col-md-5">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">Back to Product</a>
                    </div>
                </div>
            </div>

        </form>

    </div>
</div>



@* Client side VALIDATION *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}